<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/cast_libraries_material_featurehighlight_text_header_size"
        android:textStyle="bold"
        android:padding="8dp"
        android:text="Title"
        android:textColor="@android:color/secondary_text_light"
        android:id="@+id/lbl_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/cast_libraries_material_featurehighlight_text_body_size"
        android:padding="8dp"
        android:text="Description"
        android:textColor="@android:color/secondary_text_light"
        android:id="@+id/lbl_description"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/cast_libraries_material_featurehighlight_text_body_size"
        android:padding="8dp"
        android:textStyle="bold"
        android:textColor="@android:color/secondary_text_light"
        android:text="Reference : "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/cast_libraries_material_featurehighlight_text_body_size"
        android:padding="8dp"
        android:autoLink="web"
        android:text="http://lukmanh.com"
        android:textColorLink="@color/colorPrimary"
        android:id="@+id/lbl_reference"/>
</LinearLayout>